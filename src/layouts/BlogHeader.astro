---
import Tag from "../components/Tag.astro";

const {
    meta: {title, summary, tags, desc, updated, img},
    group
} = Astro.props;
---
    <div class="card-contents">
        <div class="text-center">

            {group && <h2>{group}</h2>}
            <h1>{title}</h1>
            <p class="summary italic mx-30">{desc}</p>
            {updated && <div class="text-2xl italic">{updated.toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric'
            })}</div>}
                <!--{-->
                <!--    tags && tags.map(tag =>-->
                <!--                <Tag>{tag}</Tag>)-->
                <!--}-->
        </div>
    </div>

    <hr/>

<style>
    h2 {
        margin-bottom: 10px !important;
      }
</style>