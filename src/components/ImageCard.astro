---
const {url, img, title, desc, style} = Astro.props;

const styleClass = style === 'v' ? 'image-card-v' : 'image-card-h';
---

<a href={url} class="nav">
    <div class:list={["card image-card", styleClass]}>
        <img src={img}/>
        <div class="card-row-text">
            <div class="card-row-title">{title}</div>
            <div class="card-row-desc">{desc}</div>
        </div>
    </div>
</a>

<style>

    img {
        flex: 0 0 auto;
        border-right: var(--border-width) solid var(--border-color);
        width: 200px;
        height: auto;
        object-fit: cover;
    }


    .image-card-v img {
        border-bottom: var(--border-width) solid var(--border-color);
        max-width: 100%;
        width: 100%;
        height: 250px;
        object-fit: cover;
    }

    @media screen and (max-width: 500px) {
        .card {
            display: block !important;
        }

        img {
            border-bottom: var(--border-width) solid var(--border-color);
            max-width: 100%;
            width: 100%;
            height: 250px;
            object-fit: cover;
        }
    }
</style>