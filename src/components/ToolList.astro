<div class="max-w-[1200px] mx-auto">
{
  toolsToShow.map(({links, title, desc, img, newTab}) => {
    return <div class="flex gap-x-10 justify-center justify-items-center flex-wrap mt-10">
      <a class="flex-0" href={links[0][1]}>
        <Image src={img} alt="Fontable Cover Image" width="500" height="281.25" style="object-fit: cover" class="rounded-xl" />
      </a>
      <div class="max-w-[500px]">
        {/*<div className="text-lg">use case 1:</div>*/}
        <div class="text-3xl mt-10 font-bold">{title}</div>
        {
          makeArray(desc).map(d => {
            return <div class="text-xl mt-5">{d}</div>
          })
        }

        <!--<ol>-->
