<style>
  .hero {
    //background-image: url('/textures/green-dust-and-scratches.png');
    color: white;
  }

  @media screen and (min-width: 768px) {
    .rb-hero-text {
      color: #d5cdcd;
      //background: linear-gradient(90deg, #e9c46a, #f4a261);
