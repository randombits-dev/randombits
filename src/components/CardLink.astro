---
import Card from "./Card.astro";
import CardRow from "./CardRow.astro";
interface Props {
    links: [string, string][]
}

const {links} = Astro.props;
---
<Card>
    {
        links && links.map(([title, url]) => {
            return (
                    <CardRow title={title} url={url}/>
            )
        })
    }
</Card>
<script>
    const path = window.location.pathname;
    const activeLink = document.querySelector(`a[href="${path}"]`);
    if (activeLink) {
        activeLink.classList.add('active-quick-link');
    }
</script>

<style>
    .active-quick-link {
        pointer-events: none;
        text-decoration: none !important;
    }
</style>