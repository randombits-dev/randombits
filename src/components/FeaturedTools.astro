---
import ImageCard from "./ImageCard.astro";
import Card from "./Card.astro";
import {TOOLS} from "../data/tools";
---

<Card title="Featured Tools">
    {
        TOOLS.map(({link, title, desc, img}) => {
            return <a href={link} class="nav card-row">
                <img width="75" height="75" src={img}/>
                <div>
                    <div class="card-row-title">{title}</div>
                    <div class="card-row-desc">{desc}</div>
                </div>
            </a>
        })
    }
    <a class="button card-action-btn" href="/tools">See All Tools</a>

</Card>
