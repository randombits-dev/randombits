---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ToolList from "../../components/ProjectList.astro";

---
<BaseLayout title="Projects by Random Bits" description="A list of all open source projects created by Random Bits">
  <div class="hero h-[500px] sm:h-[600px] text-center bg-header">
    <div class="relative h-[500px] sm:h-[500px] max-w-[1000px] mx-auto z-1 items-center pt-[50px] flex">
      <div class="logo inline-block z-1 flex-1 items-center leading-[0.8] border-0 px-1 py-3 rounded-5 border-solid" style="font-family: Righteous;">
        <div class="color-header-text text-[150px]">Side</div>
        <div class="color-header-text text-[80px]">Projects</div>
        <div class="color-header-text mt-10 text-2xl">A list of some of my fun side projects</div>
      </div>
      <div>
        <img src="i1.svg" width="500" height="500"/>
        <!--<Logo width="200" height="200"/>-->
      </div>
    </div>
  </div>

  <div class="text-center max-w-[1000px] mx-auto mb-10">
    <!--<h1 class="text-[60px] mb-0">Some of my fun side projects</h1>-->
    <h2 class="text-[38px] mt-0"></h2>

    <ToolList/>
</BaseLayout>

<style>
    h1 {
        color: var(--color-back);
    }
</style>
