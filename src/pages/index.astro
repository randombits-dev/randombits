<style>
    .lists {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 3fr 2fr;
        gap: 30px;
    }

    .desc {
        max-width: 800px;
        text-align: center;
        margin: 0 auto 20px;
    }

    .tag {
        font-size: 16px;
        letter-spacing: 5px;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .hero-container {
        padding: 80px 30px 50px;
        background-color: var(--back-1);
        color: var(--color-1);
        text-align: center;
        border-bottom: var(--border-width) solid var(--border-color);
    }

    .hero-container img {
        max-width: 300px;
        height: auto;
        border: 1px solid #444;
        flex: 0 0 auto;
        object-fit: cover;
        border-radius: 20px;
        margin-right: 50px;
    }

    .hero-info {
        flex: 1 1 auto;
    }

    .hero {
        margin: 0 auto;
        max-width: 1000px;
    }

    .hero-title {
        font-size: 50px;
        font-family: var(--font-1);
        font-weight: bold;
        margin-bottom: 20px;
    }

    .hero-desc {
        margin-bottom: 20px;
    }

    .c-1200 {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;

    }

    .back-0 {
        background-color: var(--back-0);
        color: var(--color-0);
        text-align: center;
    }

    .color-1 {
        background-color: var(--back-1);
        color: var(--color-1);
    }

    .color-2 {
        background-color: var(--back-2);
        color: var(--color-2);
    }

    .color-3 {
        background-color: var(--back-3);
        color: var(--color-3);
    }

    .card-list {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-auto-flow: row;
        gap: 30px;
        align-items: stretch;
    }

    .card-list + a.button {
        max-width: 500px;
        margin: 30px auto;
    }

    svg {
        width: 300px;
        height: auto;
    }

    @media screen and (max-width: 100px) {
        .card-list {
            grid-template-columns: 1fr 1fr;
        }
    }

    @media screen and (max-width: 1000px) {
        .hero-container img {
            display: none;
        }
    }


</style>
