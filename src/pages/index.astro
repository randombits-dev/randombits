---
import HtmlLayout from '../layouts/HtmlLayout.astro';
import ArticleList from '../components/ArticleList.astro';
import FeaturedTools from "../components/FeaturedTools.astro";
import GuideList from "../components/GuideList.astro";
import Card from "../components/Card.astro";
import Random from "../components/Random.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../layouts/BlogPost.astro";
---
<BaseLayout title="Developer articles and tools" description="Developer articles, tools, and more">

    <div class="hero-container">
        <div class="hero">
            <img src="/images/notebook2.jpg"/>
            <div class="hero-info">
                <div class="tag">--Featured Article--</div>
                <div class="hero-title">Creating Standard Notes Extensions</div>
                <div class="hero-desc">One of the best parts of Standard Notes is the ability to write extensions. This
                    is a
                    comprehensive guide for how to write editor extensions.
                </div>
                <a class="button" href="/">Read Full Article</a>
            </div>
        </div>
    </div>
    <h1 style="text-align: center; margin-top: 50px">Featured Tools</h1>
    <div class="c-1200">
        <div class="card-list">
            <FeaturedTools/>
            <!--<a href={''} class="nav">-->
            <!--    <div class="card card-large"><h3>See All Tools</h3></div>-->
            <!--</a>-->
        </div>
        <a class="button">See All Tools</a>

    </div>


    <h1 style="text-align: center; margin-top: 50px">Latest Articles</h1>

    <div class="c-1200">
        <div class="card-list">
            <GuideList/>
            <!--<a href={''} class="nav">-->
            <!--    <div class="card card-large"><h3>See All Articles</h3></div>-->
            <!--</a>-->
        </div>
        <a class="button" href="/">See All Articles</a>
    </div>

</BaseLayout>
<style>
    .tag {
        font-size: 16px;
        letter-spacing: 5px;
        text-transform: uppercase;
        margin-bottom: 20px;
    }

    .hero-container {
        padding: 50px 30px;
        background-color: #c3e1ff;
        text-align: center;
        border-bottom: var(--border-width) solid var(--border-color);
    }

    .hero-container img {
        max-width: 300px;
        height: auto;
        border: 1px solid #444;
        flex: 0 0 auto;
        object-fit: cover;
        border-radius: 20px;
        margin-right: 50px;
    }

    .hero-info {
        flex: 1 1 auto;
    }

    .hero {
        margin: 0 auto;
        max-width: 1000px;
        display: flex;
    }

    .hero-title {
        font-size: 50px;
        font-family: var(--font-1);
        font-weight: bold;
        margin-bottom: 20px;
    }

    .hero-desc {
        margin-bottom: 20px;
    }

    .c-1200 {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px;

    }

    .card-list {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-auto-flow: row;
        gap: 30px;
        align-items: stretch;
    }

    .card-list + a.button {
        max-width: 500px;
        margin: 30px auto;
    }

    @media screen and (max-width: 1400px) {
        .card-list {
            grid-template-columns: 1fr;
        }
    }

    @media screen and (max-width: 1000px) {
        .hero-container img {
            display: none;
        }
    }


</style>
